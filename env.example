# Backend & Security
SECRET_KEY=replace_me_with_random_32_chars
NEO4J_PASSWORD=change_me
DATABASE_URL=postgresql+asyncpg://advisor:advisor@postgres:5432/advisor_db
POSTGRES_DB=advisor_db
POSTGRES_USER=advisor
POSTGRES_PASSWORD=advisor

# LLM Service
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini
OLLAMA_MODEL=llama3:8b
OLLAMA_BASE_URL=http://llm-service:11434
LLM_CACHE_TTL=900
LLM_REQUEST_TIMEOUT=90
INTENT_FALLBACK_THRESHOLD=0.7
DEFAULT_FALLBACK_INTENT=query_rag

# Google Gemini API (for advanced OCR)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key
GEMINI_VISION_MODEL=gemini-1.5-pro-vision
USE_GEMINI_OCR=true

# University System Scraper
VERIFY_UNIVERSITY_SSL=true

# Rate Limiting
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/1
RAG_CACHE_TTL=600

